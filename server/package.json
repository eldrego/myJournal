{
  "name": "trial",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "npm run prod",
    "build": "babel -d ./build ./server -s",
    "compile": "npm run clean:test && babel -d server/tests/ server/test/ && npm run prod:client",
    "test": "npm run compile && cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text _mocha --recursive server/tests/ --require babel-core/register --exit",
    "dev": "cross-env NODE_ENV=dev nodemon index.js --exec babel-node",
    "prod": "cross-env NODE_ENV=prod node ./build/index.js",
    "clean": "rm -rf build && mkdir build",
    "clean:test": "rm -rf server/tests && mkdir server/tests",
    "cover": "nyc --reporter=lcov --reporter=text",
    "open-cov": "open coverage/lcov-report/index.html"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "rootDir": "client"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.15.3",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.2",
    "morgan": "^1.9.0",
    "nodemailer": "^4.7.0",
    "npm": "^6.2.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "@babel/runtime": "^7.0.0-beta.55",
    "babel-eslint": "^10.0.1",
    "chai": "^3.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "enzyme": "^3.8.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "jest": "^23.3.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-prepare": "^0.1.0",
    "nyc": "^11.9.0",
    "sinon": "^6.1.4",
    "supertest": "^3.1.0"
  }
}
