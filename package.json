{
  "name": "trial",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "test": "npm run server-test && npm run client-test",
    "server-test": "npm run client-prod && npm run cover",
    "client-test": "jest --coverage",
    "client-dev": "webpack --mode development --watch",
    "client-prod": "webpack --mode production",
    "start": "npm run client-prod && npm run server-prod",
    "dev": "npm run client-dev && npm run server-dev",
    "server-prod": "npm run build && node ./build/index.js",
    "build": "npm run clean && npm run build-server",
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./server -s",
    "server-dev": "nodemon server/index.js --exec babel-node",
    "cover": "babel-node ./node_modules/istanbul/lib/cli.js cover _mocha -- server/test --require babel-polyfill",
    "open-cov": "open coverage/lcov-report/index.html"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "rootDir": "client"
  },
