{
  "name": "trial",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "npm run prod:client && npm run prod:server",
    "build": "npm run clean && npm run build:server",
    "build:server": "babel -d ./build ./server -s",
    "compile": "npm run clean:test && babel -d server/tests/ server/test/ && npm run prod:client",
    "test": "npm run test:server",
    "test:server": "npm run compile && cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text _mocha --recursive server/tests/ --require babel-core/register --exit",
    "test:client": "jest --watch",
    "dev": "npm run dev:client && npm run dev:server",
    "dev:client": "webpack --mode development --watch",
    "dev:server": "cross-env NODE_ENV=dev nodemon server/index.js --exec babel-node",
    "prod:client": "webpack --mode production",
    "prod:server": "cross-env NODE_ENV=prod node ./build/index.js",
    "clean": "rm -rf build && mkdir build",
    "clean:test": "rm -rf server/tests && mkdir server/tests",
    "cover": "nyc --reporter=lcov --reporter=text",
    "open-cov": "open coverage/lcov-report/index.html"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "rootDir": "client"
  },
  "author": "",
  "license": "ISC",
